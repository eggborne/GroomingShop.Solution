@{
  Layout = "_Layout";
}

@using GroomingShop.Models;

<h2>All Pets</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>No pets have been added yet!</h3>
} 

<ul>
  @foreach(Pet pet in Model)
  {
    <li>
      <div>@pet.Name</div>
      <div>@pet.Breed</div>
      <div>
        @foreach (ParentPet join in pet.JoinEntities) {
          <span>@join.Parent.FirstName @join.Parent.LastName</span>
        }
      </div>
      
      <a href='@Url.Action("Details", new { id = pet.PetId })'>
        <button>View Details</button>
      </a>
    </li>
  }
</ul>

<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>