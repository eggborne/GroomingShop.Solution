@{
  Layout = "_Layout";
}

@using GroomingShop.Models;

<h2>All Parents</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>No parents have been added yet!</h3>
} 

<ul>
  @foreach(Parent parent in Model)
  {
    <li>
      <div>@parent.FirstName @parent.LastName</div>
      <div>Phone: @parent.Phone</div>
      <div>Email: @parent.Email</div>
      <div>Pets: @parent.JoinEntities.Count</div>
      <a href='@Url.Action("Create", "Pets", new { id = parent.ParentId })'>
        <button class="green">Add a Pet</button>
      </a>
      <a href='@Url.Action("Details", new { id = parent.ParentId })'>
        <button>View Details</button>
      </a>
    </li>
  }
</ul>

<a href='@Url.Action("Create")'>
  <button class="green">Add New Parent</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>