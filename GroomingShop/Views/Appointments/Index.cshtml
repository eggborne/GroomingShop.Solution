@{
  Layout = "_Layout";
}

@using GroomingShop.Models;

<h2>All Appointments</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>No appointments have been added yet!</h3>
} 

<ul>
  @foreach(Appointment appointment in Model)
  {
    <li>
      <div>@appointment.Pet.Name | @appointment.Pet.Breed</div>
      <div>@appointment.Parent.FirstName @appointment.Parent.LastName</div>
      <div>@appointment.Groomer.Role: @appointment.Groomer.FirstName @appointment.Groomer.LastName | @appointment.StartTime to @appointment.EndTime</div>
      @* <a href='@Url.Action("Details", new { id = appointment.AppointmentId })'>
        <button>View Details</button>
      </a> *@
    </li>
  }
</ul>

