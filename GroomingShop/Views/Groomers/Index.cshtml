@{
  Layout = "_Layout";
}

@using GroomingShop.Models;

<h2>All Groomers</h2>


@if (@Model.Count == 0)
{
  <h3>No groomers have been added yet!</h3>
} 

<ul class="groomer-list">
  @foreach(Groomer groomer in Model)
  {
    <li>
      <div>@groomer.FirstName @groomer.LastName</div>
      <div>Role: @groomer.Role</div>
      <div>Hire date: @DateOnly.FromDateTime(groomer.HireDate)</div>
      <div>Notes: @groomer.Notes</div>
      <a href='@Url.Action("Details", new { id = groomer.GroomerId })'>
        <button>View Details</button>
      </a>
      <a href='@Url.Action("Create", "Appointments", new { id = groomer.GroomerId })'>
        <button class="green">Add Appointment</button>
      </a>
    </li>
  }
</ul>

<a href='@Url.Action("Create")'>
  <button class="green">Add New Groomer</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>