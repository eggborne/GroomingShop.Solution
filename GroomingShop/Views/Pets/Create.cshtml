@{
  Layout = "_Layout";
}

@model GroomingShop.Models.Pet

<h2>Add a new pet</h2>
<hr />

@using (Html.BeginForm())
{
  <div class="form-row">
    <div class="form-text-input-area">
      <span>@Html.LabelFor(model => model.Name, "Name")</span>
      <span>@Html.TextBoxFor(model => model.Name)</span>
    </div>
    <div class="form-text-input-area">
      <span>@Html.LabelFor(model => model.Breed, "Breed")</span>
      <span>@Html.TextBoxFor(model => model.Breed)</span>
    </div>
  </div>
  <button class="green" type="submit">Add New Pet</button>
}

<a href='@Url.Action("Index")'>
  <button>Back To List</button>
</a>