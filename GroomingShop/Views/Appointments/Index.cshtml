@{
  Layout = "_Layout";
}

@using GroomingShop.Models;

<h2>All Appointments</h2>


@if (@Model.Count == 0)
{
  <h3>No appointments have been added yet!</h3>
} 

<ul class="appointment-list">
  @foreach(Appointment appointment in Model)
  {
    <li>
      <div class="floating-header">@DateOnly.FromDateTime(appointment.Date) @TimeOnly.FromDateTime(appointment.StartTime) - @appointment.Duration minutes</div>
      <div>@appointment.Pet.Name | @appointment.Pet.Breed</div>
      <div>@appointment.Parent.FirstName @appointment.Parent.LastName</div>
      <div>@appointment.Employee.Position: @appointment.Employee.FirstName @appointment.Employee.LastName</div>
      <a href='@Url.Action("Edit", new { id = appointment.AppointmentId })'>
        <button class="yellow">Edit</button>
      </a>
    </li>
  }
</ul>

