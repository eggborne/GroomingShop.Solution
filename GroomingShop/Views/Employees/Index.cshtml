@{
  Layout = "_Layout";
}

@using GroomingShop.Models;

<h2>All Employees</h2>


@if (@Model.Count == 0)
{
  <h3>No employees have been added yet!</h3>
} 

<ul class="employee-list">
  @foreach(Employee employee in Model)
  {
    <li>
      <div>@employee.FirstName @employee.LastName</div>
      <div>Position: @employee.Position</div>
      <div>Hire date: @DateOnly.FromDateTime(employee.HireDate)</div>
      <div>Notes: @employee.Notes</div>
      <a href='@Url.Action("Details", new { id = employee.EmployeeId })'>
        <button>View Details</button>
      </a>
      <a href='@Url.Action("Create", "Appointments", new { id = employee.EmployeeId })'>
        <button class="green">Add Appointment</button>
      </a>
    </li>
  }
</ul>

<a href='@Url.Action("Create")'>
  <button class="green">Add New Employee</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>